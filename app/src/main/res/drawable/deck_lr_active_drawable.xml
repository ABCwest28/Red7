<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Первый прямоугольник с контурами -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="@color/golden" />
            <solid android:color="@color/gray" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Второй прямоугольник, сдвинутый влево -->
    <item android:top="8dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="@color/golden" />
            <solid android:color="@color/gray" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Третий прямоугольник, еще больше сдвинутый влево -->
    <item android:top="16dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="@color/golden" />
            <solid android:color="@color/gray" />
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>